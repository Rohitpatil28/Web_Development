<%- include('layout/header') %>

    <div class="container my-4">
        <div class="row">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>

                        <div class="table-responsive">
                            <% if (users && users.length> 0) { %>
                                <table class="table table-striped my-3">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Image</th>
                                            <th>Name</th>
                                            <th>E-Mail</th>
                                            <th>Phone</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((row, index)=> { %>
                                            <tr class="align-middle">
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td><img src="<%= row.image %>" width="70" class="img-thumbnail"
                                                        alt="User Image"></td>
                                                <td>
                                                    <%= row.name %>
                                                </td>
                                                <td>
                                                    <%= row.email %>
                                                </td>
                                                <td>
                                                    <%= row.phone %>
                                                </td>
                                                <td>
                                                    <a href='/edit/<%= row._id %>' class="text-success"><i
                                                            class="fa-solid fa-edit fa-lg mx-1"></i></a>
                                                    <a href='/delete/<%= row._id %>' class="text-danger"><i
                                                            class="fa-solid fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">No users found in the database</h1>
                                    <% } %>
                        </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>